<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfe"
    tools:context=".CourierDeliveryDetail">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/time_change_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/tool_bar"
            app:popupTheme="@style/AppTheme.PopupOverlay" />


        <TextView
            android:id="@+id/atena1"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:text="@string/atena"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/name1"
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="@string/name"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/denpyou"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/slip_number1"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="@string/slip_number"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="127dp"
            android:layout_height="39dp"
            android:text="@string/juusho"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address1"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:text="@string/address"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView51"
            android:layout_width="252dp"
            android:layout_height="42dp"
            android:text="@string/haitatu"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_button1"
                android:layout_width="191dp"
                android:layout_height="42dp"
                android:background="@drawable/button_time_change"
                android:text="@string/dialog"
                android:textAllCaps="false"
                android:textSize="24sp" />


            <Spinner
                android:id="@+id/spinner"
                android:layout_width="173dp"
                android:layout_height="42dp"
                android:layout_marginStart="8sp"
                android:background="@drawable/button_time_change"
                android:spinnerMode="dialog"
                tools:layout_editor_absoluteX="204dp"
                tools:layout_editor_absoluteY="312dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/change_complete_button"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:background="@drawable/button_complete"
                android:text="@string/change_confirm"
                android:textSize="30sp" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
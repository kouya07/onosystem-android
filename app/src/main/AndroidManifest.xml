        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/main"></activity>
        <activity
            android:name=".CustomerHomeActivity"
            android:label="@string/customer_Home_Activity"></activity>
        <activity
            android:name=".CourierHomeActivity"
            android:label="@string/courier_Home_Activity"></activity>
        <activity
            android:name=".CustomerDeliveryDetail"
